<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".accountSetup"
        android:padding="10dp">

        <TextView
            android:id="@+id/pre_income_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre Tax Income" />

        <EditText
            android:id="@+id/input_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/monthly_rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Rent / Mortgagae" />

        <EditText
            android:id="@+id/input_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/monthly_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average Monthly Cost on Food" />

        <EditText
            android:id="@+id/input_monthly_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/monthly_phone_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Phone Bill" />

        <EditText
            android:id="@+id/input_phone_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/monthly_utilities_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Utilities Bill" />

        <EditText
            android:id="@+id/input_utilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/monthly_car_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Car Insurance" />

        <EditText
            android:id="@+id/input_car_insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/monthly_health_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Health Insurance" />

        <EditText
            android:id="@+id/input_health_insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/total_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Loan Amount" />

        <EditText
            android:id="@+id/input_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/total_student_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Loan Amount" />

        <EditText
            android:id="@+id/input_student_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/student_loan_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Loan Interest Rate" />

        <EditText
            android:id="@+id/input_interest_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0%"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/total_saving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Saving" />

        <EditText
            android:id="@+id/input_saving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="$0"
            android:inputType="numberDecimal" />
        <Button
            android:id="@+id/button_submit"
            android:text="SUBMIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submit"  />


    </LinearLayout>
</ScrollView>
